/* pages/home/home.wxss */
.banner {
  width: 750rpx;
  height: 375rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}
.subject-banner {
  width: 750rpx;
  height: 130rpx;
}
.products-container {
  padding: 0 20rpx 12rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  background-color: #EEEFF1;
}
.product {
  width: 345rpx;
  height: 520rpx;
  box-sizing: content-box;
  background-color: white;
  border: 1px solid #ffffff;
  position: relative;
  margin-top: 20rpx;
}
.product view {
  position: relative;
  padding: 0;
}
.product image {
  width: 345rpx;
  height: 345rpx;
}
.product .title {
  display: -webkit-box;
  font-size: 30rpx;
  color: #000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow:ellipsis;
  margin: 0 10rpx;
  height: 80rpx;
}
.prize {
  font-size: 28rpx;
  color: red;
  margin-left: 10rpx;
}
.original-prize {
  font-size: 26rpx;
  color: gray;
  text-decoration: line-through;
  margin-left: 8rpx;
}
.sales {
  position: absolute;
  right: 0;
  text-align: right;
  font-size: 24rpx;
  margin-right: 10rpx;
  color: gray;
}