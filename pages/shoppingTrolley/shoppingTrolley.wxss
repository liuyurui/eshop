/* pages/shoppingTrolley/shoppingTrolley.wxss */
page {
  height: 100%;
}
.container {
  background: #EEEFF1;
  padding-bottom: 10rpx;
  min-height: 100%;
}
.product {
  width: 100%;
  height: 180rpx;
  display: flex;
  align-content: stretch;
  align-items: center;
  background: #fff;
  margin-top: 10rpx;
}
.select-area {
  width: 80rpx;
  height: 100%;
  text-align: center;
}
.select-area image {
  width: 50rpx;
  height: 50rpx;
  margin: auto 0;
}
.product-image {
  width: 160rpx;
  height: 160rpx;
}
.product-content {
  flex: 1;
  height: 100%;
  position: relative;
}
.product-name {
  display: block;
  font-size: 30rpx;
  margin: 20rpx 60rpx 0 20rpx;
}
.product-prize {
  display: block;
  font-size: 28rpx;
  color: red;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.delete {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  /* background-color: red; */
}
.delete image {
  width: 35rpx;
  height: 35rpx;
  top: 0;
}
.empty {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #fff;
  text-align: center;
}
.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-top: 120rpx;
}
.empty text {
  display: block;
  color: #707070;
  margin-top: 10rpx;
  font-size: 34rpx;
}
.empty view {
  color: #fff;
  font-size: 34rpx;
  line-height: 70rpx;
  margin: 80rpx auto 0;
  width: 400rpx;
  height: 70rpx;
  background-color: #9F79EE;
  border-radius: 40rpx;
  text-align: center;
  vertical-align: middle;
}