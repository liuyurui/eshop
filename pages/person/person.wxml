<!--pages/person/person.wxml-->
<view>
  <view class='top-area'>
    <view class='top-area-half'></view>
    <image class='portrait' src='{{userInfo.avatarUrl}}'></image>
    <text class='person-name'>{{userInfo.nickName}}</text>
    <text class='addr_manage' bindtap='goAddrManage'>收货地址</text>
  </view>
  <view class='order-title-area'>
    <view class='order-indicator'></view>
    <view class='order-title'>订单管理</view>
  </view>
  <view class='orders'>
    <view>
      <image src='/image/pending_deliver.png'></image>
      <text>待发货</text>
    </view>
    <view>
      <image src='/image/to_be_received.png'></image>
      <text>待收货</text>
    </view>
    <view>
      <image src='/image/have_received.png'></image>
      <text>已收货</text>
    </view>
    <view>
      <image src='/image/customer_service.png'></image>
      <text>退款/售后</text>
    </view>
  </view>
</view>