/* pages/person/person.wxss */
.top-area {
  position: relative;
  height: 320rpx;
  background-color: #fff;
}
.top-area-half {
  position: absolute;
  width: 100%;
  height: 180rpx;
  background-color: #9F79EE;
}
.portrait {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  left: 60rpx;
  top: 90rpx;
  border-radius: 180rpx;
  border: 2px solid #fff;
  box-sizing: border-box;
}
.person-name {
  position: absolute;
  left: 260rpx;
  font-size: 34rpx;
  color: #fff;
  line-height: 34rpx;
  white-space: nowrap;
  top: 130rpx;
}
.addr_manage {
  position: absolute;
  /* left: 260rpx; */
  right: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #9F79EE;
  padding: 10rpx 20rpx;
  top: 190rpx;
  border-radius: 10rpx;
}
.order-title-area {
  position: relative;
  margin-left: 20rpx;
  height: 30rpx;
}
.order-indicator, .order-title {
  position: absolute;
  top: 0;
}
.order-title-area .order-indicator {
  width: 6rpx;
  height: 30rpx;
  left: 100; 
  background-color: #9F79EE;
}
.order-title-area .order-title {
  font-size: 30rpx;
  line-height: 30rpx;
  left: 20rpx; 
}
.orders {
  display: flex;
  align-content: stretch;
  margin-top: 30rpx;
}
.orders view {
  width: 150rpx;
  text-align: center;
  flex: 1;
}
.orders image {
  width: 60rpx;
  height: 60rpx;
}
.orders text {
  display: block;
  font-size: 24rpx;
  color: #707070;
  margin-top: -10rpx;
}