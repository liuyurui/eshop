/* pages/goodDetail/goodDetail.wxss */
page {
  background-color: #EEEFF1;
}
.banner {
  width: 750rpx;
  height: 750rpx;
}
.banner image {
  width: 750rpx;
  height: 750rpx;
}
.desc {
  padding: 0 20rpx;
  position: relative;
  background-color: white;
}
.desc .good-name {
  font-size: 30rpx;
}
.good-prize {
  font-size: 28rpx;
  color: red;
}
.original-prize {
  font-size: 26rpx;
  color: gray;
  text-decoration: line-through;
}
.sales {
  position: absolute;
  right: 20rpx;
  bottom: 0;
  font-size: 26rpx;
  color: gray;
}
.good-detail-image {
  width: 750rpx;
  margin-top: 20rpx;
}
.details-container {
  display: flex;
  flex-direction: column;
  padding: 0rpx 10rpx 110rpx 10rpx;
}
.details-image {
  width: 730rpx;
}
.footer {
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
}
.footer {
  display: flex;
  flex-direction: row;
}
.custom-service, .shopping-trolley {
  position: relative;
  width: 125rpx;
  height: 100rpx;
  text-align: center;
}
.custom-service image {
  width: 36rpx;
  height: 36rpx;
  margin-top: 20rpx;
}
.custom-service text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin-top: -5rpx;
}
.shopping-trolley image {
  width: 36rpx;
  height: 36rpx;
  margin-top: 20rpx;
}
.shopping-trolley text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin-top: -5rpx;
}
.shopping-trplley-num {
  position: absolute;
  top: 0;
  right: 20rpx;
  font-size: 20rpx;
  color: #e64340;
}
.join-shopping-trolley {
  width: 250rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #ff6850;
  color: white;
  font-size: 34rpx;
}
.buy {
  width: 250rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #e64340;
  color: white;
  font-size: 34rpx;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pop_product_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.pop-product-image {
  width: 125rpx;
  height: 125rpx;
  background-color: red;
  margin-right: 16rpx;
}
.pop-product-name {
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-product-prize {
  font-size:26rpx;
  color:#e64340;
  margin-top:20rpx; 
}
.pop-product-close {
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background:url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  align-self: flex-start;
  margin-top: -10rpx;
}

.hidden {
  visibility: hidden;
}