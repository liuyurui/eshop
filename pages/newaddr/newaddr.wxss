 /** pages/newaddr/newaddr.wxss */
.line {
  width: 100%; 
  height: 80rpx;
  display: flex;
  align-content: stretch;
  margin: 0 20rpx;
  border-bottom: thin solid gainsboro; 
}

.line .desc {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
}
.line picker {
  flex: 1;
  height: 80rpx;
}
.line picker input {
  height: 80rpx;
  width: 50%;
}
.line input {
  flex: 1;
  height: 100%;
  line-height: 100%;
  vertical-align: middle;
}

.footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  vertical-align: middle;
  color: #9F79EE;
  border-top: 1px solid #707070;
}